{
  "swagger": "2.0",
  "info": {
    "description": "This is the TSorage µservice Hub.  You can find out more about Tsorage Hub at [https://github.com/cetic/tsorage-hub](https://github.com/cetic/tsorage-hub).",
    "version": "1.0.2",
    "title": "Swagger TSorage µservice",
    "termsOfService": "",
    "contact": {
      "email": "mathieu.goeminne@cetic.be"
    },
    "license": {
      "name": "Apache 2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    }
  },
  "host": "localhost:8081",
  "basePath": "",
  "tags": [
    {
      "name": "access",
      "description": "User management and authentication",
      "externalDocs": {
        "description": "Find out more",
        "url": "http://swagger.io"
      }
    }
  ],
  "schemes": [ "http", "https" ],
  "paths": {
    "/auth": {
      "post": {
        "tags": [
          "access"
        ],
        "summary": "User authentication",
        "description": "Authenticates a user based on a provided token.",
        "operationId": "checkAuth",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "The token payload supposedly associated with a user.",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Token"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/definitions/AuthenticationResponse"
                }
              }
            }
          },
          "405": {
            "description": "Invalid input"
          }
        },
        "security": [
          {
            "petstore_auth": [
              "write:pets",
              "read:pets"
            ]
          }
        ]
      }
    },
    "/metric/{metricId}/tagset": {
      "get": {
        "tags": ["metric"],
        "summary": "Lists the static tagset associated with a metric.",
        "description": "Lists the static tagset associated with a metric.",
        "operationId": "getMetricTagset",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "path",
            "name": "metricId",
            "type": "string",
            "required": true,
            "description": "The id of the considered metric."

          }
        ],
        "responses": {
          "200": {
            "description": "A tagset",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object"
                },
                "example": {"owner":  "cetic", "quality":  "good", "plant":  "plant1", "asset":  "pump3"}
              }
            }
          },
          "400": {
            "description": "Bad request. Metric ID must be a string"
          },
          "401": {
            "description": "Authorization information is missing or invalid."
          },
          "404": {
            "description": "A metric with the specified ID was not found"
          },
          "405": {
            "description": "Invalid input"
          },
          "5XX": {
            "description": "Unexpected error"
          }
        }
      }
    }
  },
  "securityDefinitions": {
    "petstore_auth": {
      "type": "oauth2",
      "authorizationUrl": "https://petstore.swagger.io/oauth/authorize",
      "flow": "implicit",
      "scopes": {
        "write:pets": "modify pets in your account",
        "read:pets": "read your pets"
      }
    },
    "api_key": {
      "type": "apiKey",
      "name": "api_key",
      "in": "header"
    }
  },
  "definitions": {
    "Token": {
      "type": "object",
      "properties": {
        "api_key": {
          "type": "string",
          "example": "4b8639ed-0e90-4b3f-8a45-e87c22d17887"
        }
      }
    },
    "User": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer",
          "format": "int64"
        },
        "username": {
          "type": "string"
        },
        "firstName": {
          "type": "string"
        },
        "lastName": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "password": {
          "type": "string"
        },
        "phone": {
          "type": "string"
        },
        "userStatus": {
          "type": "integer",
          "format": "int32",
          "description": "User Status"
        }
      },
      "xml": {
        "name": "User"
      }
    },
    "AuthenticationResponse": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string",
          "example": "Mathieu Goeminne"
        },
        "expiracy": {
          "type": "string",
          "format": "date-time",
          "example": "2019-01-02T12:34:56.789"
        }
      }
    }
  },
  "externalDocs": {
    "description": "Find out more about TSorage",
    "url": "https://github.com/cetic/tsorage-hub"
  }
}